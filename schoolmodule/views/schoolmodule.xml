<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  classroom model   -->
    <!--  classroom model tree view  -->
    <record model="ir.ui.view" id="classroom_tree_view">
        <field name="name">classroom.tree</field>
        <field name="model">schoolmodule.classroom</field>
        <field name="arch" type="xml">
            <tree string="Classroom list">
                <field name="name"/>
                <field name="student_ids"/>
            </tree>
        </field>
    </record>
    <!--  classroom model form view  -->
    <record model="ir.ui.view" id="classroom_form_view">
        <field name="name">classroom.form</field>
        <field name="model">schoolmodule.classroom</field>
        <field name="arch" type="xml">
            <form string="Classroom form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <field name="student_ids"/>
                </sheet>

            </form>
        </field>
    </record>


    <!--  student model   -->
    <!--  student model tree view  -->
    <record model="ir.ui.view" id="student_tree_view">
        <field name="name">student.tree</field>
        <field name="model">schoolmodule.student</field>
        <field name="arch" type="xml">
            <tree string="students list">
                <field name="name"/>
                <field name="age"/>
                <field name="gender" widget='radio'/>
                <field name="description"/>
                <field name="classroom_id"/>
                <field name="gpa"/>
            </tree>
        </field>
    </record>
    <!--  student model form view  -->
    <record model="ir.ui.view" id="student_form_view">
        <field name="name">student.form</field>
        <field name="model">schoolmodule.student</field>
        <field name="arch" type="xml">
            <form string="students form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="description"/>
                        <field name="gpa"/>
                        <field name="classroom_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--  teacher model   -->
    <!--  teacher model tree view  -->
    <record model="ir.ui.view" id="teacher_tree_view">
        <field name="name">teacher.tree</field>
        <field name="model">schoolmodule.teacher</field>
        <field name="arch" type="xml">
            <tree string="teachers list">
                <field name="name"/>
                <field name="age"/>
                <field name="courses"/>
                <field name="classroom_ids"/>
            </tree>
        </field>
    </record>
    <!--  teacher model form view  -->
    <record model="ir.ui.view" id="teacher_form_view">
        <field name="name">teacher.form</field>
        <field name="model">schoolmodule.teacher</field>
        <field name="arch" type="xml">
            <form string="teacher form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age" default=""/>
                        <field name="courses" widget='radio'/>
                        <field name="classroom_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="teacher_list_action">
        <field name="name">teachers</field>
        <field name="res_model">schoolmodule.teacher</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Enter the first teacher at your school</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="student_list_action">
        <field name="name">students</field>
        <field name="res_model">schoolmodule.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Enter first student at your school</p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="classroom_list_action">
        <field name="name">classroom</field>
        <field name="res_model">schoolmodule.classroom</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Define your classes</p>
        </field>
    </record>

    <menuitem id="main_schoolmodule_menu" name="School"/>
    <menuitem id="schoolmodule_menu" name="School menu" parent="main_schoolmodule_menu"/>
    <menuitem id="schoolmodule_detailed_menu" name="School sub menu " parent="schoolmodule_menu"/>
    <menuitem id="classroom_menu" name="Classroom" parent="schoolmodule_detailed_menu" action="classroom_list_action"/>
    <menuitem id="teacher_menu" name="Teacher" parent="schoolmodule_detailed_menu" action="teacher_list_action"/>
    <menuitem id="student_menu" name="Student" parent="schoolmodule_detailed_menu" action="student_list_action"/>
</odoo>